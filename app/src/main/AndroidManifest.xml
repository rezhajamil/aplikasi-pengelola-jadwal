<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pengingatjadwal">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PengingatJadwal">
        <activity
            android:name=".SplashScreenActivity" android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.TentangActivity" android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".Activity.BantuanActivity" android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".Activity.IntroActivity" android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".Activity.MainActivity" android:screenOrientation="portrait"
            android:exported="true">
        </activity>
        <activity
            android:name=".Activity.RegisterActivity" android:screenOrientation="portrait"
            android:exported="true">
        </activity>
        <activity
            android:name=".Activity.LoginActivity" android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <receiver android:name=".Alarm.AlarmReceiver" />
    </application>

</manifest>